generator client {
  provider = "prisma-client-js"
  output   = "./__generated__"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id     String     @id @default(uuid())
  method AuthMethod

  email    String @unique
  password String

  displayName String
  picture     String?

  isVerified         Boolean @default(false) @map("is_verified")
  isTwoFactorEnabled Boolean @default(false) @map("is_two_factor_enabled")

  role UserRole @default(REGULAR)

  createAt DateTime @default(now()) @map("create_at")
  updateAt DateTime @updatedAt @map("update_at")

  accounts Account[]

  @@map("users")
}

model Account {
  id String @id @default(uuid())

  type     String
  provider String

  refresToken String? @map("refres_token")
  accesToken  String? @map("acces_token")
  expireAt    Int     @map("expire_at")

  createAt DateTime @default(now()) @map("create_at")
  updateAt DateTime @updatedAt @map("update_at")

  user   User?   @relation(fields: [userId], references: [id])
  userId String? @map("user_id")

  @@map("accounts")
}

model Token {
  id        String    @id @default(uuid())
  email     String
  token     String    @unique
  tokenType TokenType
  expireIn  DateTime  @map("expires_in")

  @@map("tokens")
}

enum AuthMethod {
  CREDENTIAL
  GOOGLE
  YANDEX
}

enum UserRole {
  REGULAR
  ADMIN
}

enum TokenType {
  VERFICATION
  TWO_FACTOR
  PASSWORD_RESET
}
